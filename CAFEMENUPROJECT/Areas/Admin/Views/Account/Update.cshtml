@using CAFEMENUPROJECT.DATA.Entity
@model User
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<form>
    <div class="card-body">
        <input type="hidden" id="IdUpdate" value="@Model.Id">

        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="NameUpdate" placeholder="Enter Name" value="@Model.Name">
        </div>

        <div class="form-group">
            <label for="Surname">Surname</label>
            <input type="text" class="form-control" id="SurnameUpdate" placeholder="Enter Surname" value="@Model.Surname">
        </div>

        <div class="form-group">
            <label for="Username">Username</label>
            <input type="text" class="form-control" id="UsernameUpdate" placeholder="Enter Username" value="@Model.Username">
        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="PasswordUpdate" placeholder="Enter Password">
        </div>

    </div>
    <!-- /.card-body -->

</form>

