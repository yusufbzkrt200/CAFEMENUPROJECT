@using CAFEMENUPROJECT.DATA.Entity
@model Category

@{
    var categories = ViewBag.Categories as List<Category>;
    var category = categories.Where(i => i.Id == Model.ParentCategoryId).FirstOrDefault();
}

<form>
    <div class="card-body">
        <input type="hidden" id="IdUpdate" value="@Model.Id">

        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="NameUpdate" placeholder="Enter Name" value="@Model.Name">
        </div>



        <div class="form-group">
            <label for="ParentCategoryId">Parent Category (If You Want Add)</label>
            <select class="form-control" id="ParentCategoryIdUpdate" placeholder="Parent Category">
                <option value="">Select</option>
                @if (category != null)
                {
                    <option value="@category.Id" selected>@category.Name</option>
                    categories.Remove(category);
                }
                @foreach (var item in categories)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>



    </div>
    <!-- /.card-body -->

</form>